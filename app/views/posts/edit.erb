<h1>Edit the current post below!</h1>


<%= form_with model: @post do |f| %>
<%= f.text_field :title, placeholder: 'Title' %>
<%= f.number_field :user_id, min: 47 , placeholder: 'User' %>
<%= f.text_field :item, placeholder: 'Item' %>
<%= f.text_field :comment, placeholder: 'Comment' %>
<%= f.submit %>
<% end %>